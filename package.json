{
  "name": "simple-goals",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "next telemetry disable",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint .",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "prepare": "husky",
    "test": "jest --config jest.config.ts --passWithNoTests",
    "test:watch": "jest --watch --config jest.config.ts",
    "coverage": "jest --config jest.config.ts --coverage",
    "test:update": "jest --updateSnapshot --config jest.config.ts",
    "check": "npm run format && npm run lint && npm run test"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seeders/seed.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(json|html|css|md)": [
      "npm run format"
    ],
    "*.(ts|tsx)": [
      "npm run format",
      "npm run lint",
      "npm run test"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "jose": "^5.9.6",
    "next": "15.1.6",
    "next-auth": "^4.24.11",
    "next-intl": "^3.26.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.1",
    "usehooks-ts": "^3.1.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "prisma": "^6.4.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
