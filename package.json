{
  "name": "simple-goals",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint .",
    "test": "vitest",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "db:clean": "rimraf ./prisma/dev.db",
    "db:push": "npx prisma db push",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:seed": "tsx ./prisma/seed.ts",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(json|html|css|md)": [
      "npm run format"
    ],
    "*.(ts|tsx)": [
      "npm run format",
      "npm run lint"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "clsx": "^2.1.1",
    "jose": "^5.9.6",
    "next": "15.1.6",
    "prisma": "^6.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "^5",
    "vitest": "^3.0.5"
  }
}
