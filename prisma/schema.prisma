generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime
}

model years {
  id      Int @id @default(autoincrement())
  year    Int
  user_id Int

  @@index([user_id])
}

model goals {
  id           Int       @id @default(autoincrement())
  name         String
  is_completed Boolean   @default(false)
  completed_at DateTime?
  sort_order   Int
  year_id      Int
  created_at   DateTime  @default(now())
  updated_at   DateTime

  @@index([year_id])
}
